  #include <stdio.h>
#include<string.h>

int main()
{
   int i,j;
   char arr[30];
   printf("enter the string you want to reversed:");
   // gets(arr);
   scanf("%s",arr);
     int str=strlen(arr);
     for(i=0;i<str/2;i++){
             int temp=arr[i];
             arr[i]=arr[str-i-1];
             arr[str-i-1]=temp;
         
     }
     
         printf(" string after the reversed %s",arr);
     
   
   
    return 0;
}
